// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.

{
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "ssh_connections": [
    {
      "host": "neon",
      "projects": [
        {
          "paths": ["/home/alex/src/go/tgdp"]
        }
      ]
    }
  ],
  "theme": "VSCode Dark Modern",
  "hour_format": "hour24",
  "ui_font_size": 15,
  "buffer_font_size": 15.0,
  "buffer_font_family": "Zed Plex Mono",
  "buffer_line_height": "standard",

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.localized",
    "**/.git*",
    "**/.vscode",
    "**/.zig-cache",
    "**/__debug*",
    "**/target",
    "**/vendor",
    "**/zig-out"
  ],

  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },

  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },

  "features": {
    "copilot": true,
    "edit_prediction_provider": "zed"
  },

  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path": "rust-analyzer",
        "arguments": ["--no-log-buffering"]
      },
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      }
    },

    "zls": {
      "binary": {
        "path": "zls",
        "arguments": []
      }
    },

    "gopls": {
      "binary": {
        "path": "gopls",
        "arguments": []
      }
    },

    "lua-lsp": {
      "binary": {
        "path": "lua-language-server",
        "arguments": []
      }
    },

    "pkl-lsp": {
      "binary": {
        "path": "pkl-lsp",
        "arguments": []
      }
    }
  },

  "file_types": {
    "Go": ["go"],
    "Lua": ["Lua"],
    "Pkl": ["pkl"],
    "Rust": ["rs"],
    "Zig": ["zig", "ZON"]
  },

  "languages": {
    "Rust": {
      "tab_size": 4,
      "show_edit_predictions": true,
      "enable_language_server": true,
      "language_servers": ["rust-analyzer"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "rustfmt",
          "arguments": [
            "--config",
            "struct_field_align_threshold=32,enum_discrim_align_threshold=32"
          ]
        }
      }
    },

    "Zig": {
      "tab_size": 4,
      "show_edit_predictions": true,
      "enable_language_server": true,
      "language_servers": ["zls"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "zig",
          "arguments": ["fmt", "--stdin"]
        }
      }
    },

    "Go": {
      "tab_size": 4,
      "show_edit_predictions": true,
      "enable_language_server": true,
      "language_servers": ["gopls"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "gofmt",
          "arguments": []
        }
      }
    },

    "Lua": {
      "tab_size": 4,
      "show_edit_predictions": true,
      "enable_language_server": true,
      "language_servers": ["lua-pls"],
      "format_on_save": "on"
    },

    "Pkl": {
      "tab_size": 2,
      "show_edit_predictions": true,
      "enable_language_server": true,
      "language_servers": ["pkl-lsp"],
      "format_on_save": "language_server"
    }
  }
}
